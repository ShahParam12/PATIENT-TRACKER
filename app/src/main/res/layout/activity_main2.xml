<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashimg1"
    tools:context=".Main2Activity">


    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="122dp"
        android:layout_height="131dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/man"
        app:layout_constraintBottom_toTopOf="@+id/textPat1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewUser"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/aclonica"
        android:text="LOGIN"
        android:textColor="#101010"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textPat"
        app:layout_constraintTop_toBottomOf="@+id/textPat" />

    <ImageView
        android:id="@+id/imageViewDoc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/textPat1"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/doctor1"
        app:layout_constraintBottom_toTopOf="@+id/textDoc"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPatient"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewPatient"
        app:layout_constraintTop_toBottomOf="@+id/textPat1" />

    <TextView
        android:id="@+id/textDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewDoc"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/aclonica"
        android:text="DOCTOR'S"
        android:textColor="#101010"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/imageViewDoc"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDoc" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDoc"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/aclonica"
        android:text="LOGIN"
        android:textColor="#101010"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPatient"
        app:layout_constraintEnd_toEndOf="@+id/textDoc"
        app:layout_constraintTop_toBottomOf="@+id/textDoc" />

    <ImageView
        android:id="@+id/imageViewPatient"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="32dp"
        android:src="@drawable/person"
        app:layout_constraintBottom_toTopOf="@+id/textPat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textPat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPatient"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/aclonica"
        android:text="PATIENT'S"
        android:textColor="#101010"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/imageViewPatient"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPatient" />

    <TextView
        android:id="@+id/textPat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPat"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/aclonica"
        android:text="LOGIN"
        android:textColor="#101010"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewDoc"
        app:layout_constraintStart_toStartOf="@+id/imageViewUser"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUser" />

</androidx.constraintlayout.widget.ConstraintLayout>